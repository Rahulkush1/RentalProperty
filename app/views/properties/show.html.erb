<%= render "home/navbar" %>	

<div class="container show_property my-5">
	<h1 class="text-center border-bottom w-25 m-auto my-4">  Property Details </h1>
	<div class="row ">
		<div class="col-lg-4 scroll_img ">
			<% @property.images.each do |image| %>
				
					<div class="card mb-2" style="max-width: 18rem;">
						<img src="<%= url_for(image) %>" class="img-fluid " style="max-height: 12rem;">
						<div class="card-body">
						<%= link_to 'Remove', user_property_delete_image_attachment_path(@property,image), data:{ turbo_method: :delete,turbo_confirm: "Are you sure?" },class: "btn btn-outline-primary text-center form-control" %>
						</div>
					</div>
				
			<% end %>
		</div>
		<div class="col-lg-8 property_details_show px-5">
			<div class="mb-3 ">
				<p class="fs-3">Name : <span class="text-primary mx-3 fs-4"><%= @property.name %></span></p>
			</div>
			<div class="mb-3">
				<p class="fs-3">Status : <span class="text-primary mx-3 fs-4"><%= @property.status %></span></p>
			</div>
			<div class="mb-3">
				<p class="fs-3">Property Type :<span class="text-primary mx-3 fs-4"><%= @property.prop_type %></span> </p>
			</div>
			<div class="mb-3">
				<% if @property.prop_type != 'Flat' %>
					<p>Name : <%= @property.flat_type %></p>
				<% end %>
				<p class="fs-3">Amenities : 
					<ul>
						<% @property.amenities.each do |amenity| %>
							<li class="text-primary">
								<%= amenity.title %>
							</li>
						<% end %>
					</ul>
				
				</p>
			</div>
			
			<div class="mb-3">
				<p class="fs-3">Address : 
					<p>	
						<span>Line 1 </span>:<span class="text-primary mx-2"><%= @property.address.address %></span> 
					</p>
					<p>
						<span>Street</span>:<span class="text-primary mx-2"><%= @property.address.street %></span>
						  
					</p>
					<p>	
						<span>City</span>:<span class="text-primary mx-2"><%= @property.address.city %></span>
						  
					</p>
					<p>		
						<span>Country</span> :<span class="text-primary mx-2"> <%= @property.address.country %></span>
						
					</p>
				</p>
			</div>
			<div class="mb-3">
				<%= link_to "Edit ",edit_user_property_path(current_user,@property),class: "btn btn-outline-primary form-control w-25 py-2 my-3" %>
				<%= link_to "Delete ",[current_user,@property],data:{ turbo_method: :delete,turbo_confirm: "Are you sure?" },class: "btn btn-outline-primary form-control w-25 py-2 my-3" %>
			</div>
			
			
		</div>
		
		
		 

	</div>

</div>




<%= render "home/footer" %>	
	