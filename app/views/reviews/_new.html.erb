<div class="container">
	<h3 class="card-title"> Give Review</h2>
	<%= form_for @user.reviews.build do |f| %>	
		<%= f.hidden_field :user_id, value: "#{user_id}" %>
		<div class="mb-3">
			<%= f.label :rating, class: "form-label" %>
			<%= f.text_field :rating, class: "form-control" %>
		</div>	
		<div class="mb-3">
			<%= f.label :body, class: "form-label" %>
			<%= f.text_area :body, class: "form-control" %>
		</div>	
		<div class="mb-3">
			<%= f.submit %>
		</div>	
	<% end %>
</div>